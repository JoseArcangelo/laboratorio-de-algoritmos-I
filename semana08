def menu():
    print("Banco do Bruno")
    print("1- Sacar")
    print("2- Depositar")
    print("3- Saldo atual")
    print("4- FAzer emprestimo")
    print("5- Pagar emprestimoo")
    print("6- Debito do emprestimo")
    print("7- Sair")
    opcao = int(input("Op√ßao:"))
    return opcao
    
def mostrarSaldo(saldo):
    print("Saldo atual:", saldo)

def mostrarEmprestimo(emprestimo):
    print("Emprestimo atual:", emprestimo)

def concederEmprestimo(saldo, emprestimo):
    
    if emprestimo == 0:
        valorEmprestimo = float(input("Valor do emprestimo desejado:"))
        
        if valorEmprestimo <= saldo * 2:
            print("Emprestimo aprovado com sucesso!!")
            emprestimo = valorEmprestimo
            saldo = saldo + valorEmprestimo
            mostrarSaldo(saldo)
            
    
    else:
        print("Voce ja possui um emprestimo!!")
        
    return saldo, emprestimo

def lerSaldo():
    saldo = float(input("Informe o saldo:"))
    return saldo
    
def sacar(saldo):
    saque = float(input("Quanto deseja sacar:"))
    
    if saque <= saldo:
        saldo = saldo - saque
        mostrarSaldo(saldo)
        
    else:
        print("Saldo insuficiente!!")
        
    return saldo

def depositar(saldo):
    deposito = float(input("Informe a quantia do deposito:"))
    saldo = saldo + deposito
    mostrarSaldo(saldo)
    
def pagarEmprestimo(saldo, emprestimo):
    print("1 - Pagar todo emprestimo")
    print("2- Pagar metade do emprestimo")
    opc = int(input("Opcao:"))
    
    if opc == 1:
        valorParaPagar = emprestimo 
        
    elif opc ==2:
        valorParaPagar = emprestimo / 2
        
    if saldo >= valorParaPagar:
        saldo = saldo - valorParaPagar
        emprestimo = emprestimo - valorParaPagar
        print("Valor pago com sucesso!!")
        mostrarEmprestimo(emprestimo)
        
    else:
        print("Saldo insuficiente para pagar o emprestimo!!")
        
    return saldo, emprestimo
    
    
def main():
    saldo = lerSaldo()
    emprestimo = 0
    opc = 0
    
    while opc != 7:
        opc = menu()
        
        if opc == 1:
            saldo = sacar(saldo)

        elif opc == 2:
            print("Depositar")
            saldo = depositar(saldo)
        
        elif opc == 3:
            mostrarSaldo(saldo)
        
        elif opc == 4:
            saldo, emprestimo = concederEmprestimo(saldo, emprestimo)
        
        elif opc == 5:
            saldo, emprestimo = pagarEmprestimo(saldo, emprestimo)

        elif opc == 6:
            mostrarEmprestimo(emprestimo)
            
        elif opc == 7:
            print("Saindo...")
            
        else:
            print("Opcao invalida!!!")


main()
