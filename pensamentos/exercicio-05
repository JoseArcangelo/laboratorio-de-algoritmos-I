def somar(n1, n2, limite):
    s = n1 + n2
    if s > limite:
        print("Soma:", s)
        print(True)
        print("ULTRAPASSOU O LIMITE!")

def main():
    n1 = float(input("Informe o primeior numero:"))
    n2 = float(input("Informe o segundo numero:"))
    limite = float(input("Informe o LIMITE:"))
    
    somar(n1, n2, limite)

main()
