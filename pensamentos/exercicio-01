def somar(x, y):
    r = x + y
    return r

def subtracao(x, y):
    r = x - y
    return r

def multiplicacao(x, y):
    r = x * y
    return r
    
def divisao(x, y):
    r = x / y
    return r
    
def main():
    a = float(input("Informe um numero:"))
    b = float(input("Informe o outro numero:"))
    print("1 - Somar")
    print("2 - Subtração")
    print("3 - Multiplicação")
    print("4 - Divisão")

    teste = 0
    while teste != 1:
        opc = int(input("Informe a opção desejada:"))
        if opc == 1:
            r = somar(a, b)
            print("Resultado da soma:", r)
            teste = 1
            
        elif opc == 2:
            r = subtracao(a, b)
            print("Resultado da subtração:", r)
            teste = 1
            
        elif opc == 3:
            r = multiplicacao(a, b)
            print("Resultado da multiplicação:", r)
            teste = 1
            
        elif opc == 4:
            r = divisao(a, b)
            print("Resultado da divisão:", r)
            teste = 1
            
        else:
            print("INFORME SOMENTE UMA DAS OPÇÕES LISTADAS!!")

main()
